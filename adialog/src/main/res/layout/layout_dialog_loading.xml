<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_loading_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <com.zj.dialog.view.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="120dp"
        android:layout_height="60dp"
        wheel:matProg_barColor="@color/loading_color"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/show_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/layout_dialog_loading"
        android:textColor="@color/textGreenColor"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>